# ========== AI 模型配置 ==========
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# ========== 管理员配置 ==========
ADMIN_PASSWORD=your_secure_admin_password_here

# ========== 数据库配置 ==========
DATABASE_URL=postgresql://postgres:tianjige_password@localhost:5432/tianjige
POSTGRES_PASSWORD=tianjige_password

# ========== 阿里云短信配置 ==========
SMS_ACCESS_KEY_ID=your_aliyun_access_key_id
SMS_ACCESS_KEY_SECRET=your_aliyun_access_key_secret
SMS_SIGN_NAME=天机阁
SMS_TEMPLATE_CODE=SMS_123456789

# ========== 微信支付配置 ==========
WECHAT_PAY_MCH_ID=your_wechat_mch_id
WECHAT_PAY_API_KEY=your_wechat_api_key_32_chars
WECHAT_PAY_NOTIFY_URL=https://your-domain.com/api/payment/callback/wechat
